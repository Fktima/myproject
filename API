swagger: "2.0"
info:
  description: "This is a simple genome browser to look at genes in human chromosome 2. The data is retrieved from Genbank and a summary of the gene and its protein product will be displayed along with restricition enzyme cuts. "
  version: "1.0.0"
  title: "Genome Browser"

host: "notdefined.yet"
basePath: "/v2"
schemes:
- "https"
- "http"
paths:
  /gene/findByGeneIdentifier:
    get:
      tags:
      - "gene"
      summary: "Finds information based on gene identifiers"
      description: " A single gene identifier can be provided'"
      parameters:
      - in: "query"
        name: identifier
        description: "Gene identifier of gene to return"
        required: true
        type: string
        items:
          type: string
      responses: 
        200:
          description: "successfull operation"
          schema:
            type: object
            items:
              $ref: "#/definitions/Gene"
  /gene/findByProteinProduct:
    get:
      tags:
      - "gene"
      summary: "Finds information based on protein product name"
      description: " A protein name can be provided'"
      parameters:
      - in: "query"
        name: proteinName
        description: "The name of the protein product of gene to return"
        required: true
        type: string
        items:
          type: string
      responses: 
        200:
          description: "successful operation"
          schema:
            type: object
            items:
              $ref: "#/definitions/Gene"
        400: 
          description: "invalid protein name"   
  /gene/findsByGenbankAcession:
    get:
      tags:
      - "gene"
      summary: "Finds information based on Genbank accession"
      description: " A Genbank accsesion can be provided'"
      parameters:
      - in: "query"
        name: genbankAccession
        description: "The accession code of gene to return"
        required: true
        type: string
      responses: 
        200:
          description: "successful operation"
          schema:
            type: object
            items:
              $ref: "#/definitions/Gene"
        400: 
          description: "invalid Genbank accesion number" 
